<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gospelministries.gmimedia"
    android:versionCode="1"
    android:versionName="0.9_beta" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.gospelministries.gmimedia.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gospelministries.gmimedia.Video_Low_Mission"
            android:label="@string/title_activity_video">
            --android:parentActivityName="com.gospelministries.gmimedia.MainActivity" >
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.gospelministries.gmimedia.MainActivity"
            />
        </activity>
        <activity
            android:name="com.gospelministries.gmimedia.RadioActivity"
            android:label="@string/title_activity_radio" >
        </activity>
        <activity
            android:name="com.gospelministries.gmimedia.Info"
            android:label="@string/title_activity_info" >
        </activity>
    </application>

</manifest>